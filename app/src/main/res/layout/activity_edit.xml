<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-material3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- 顶部工具栏 -->
    <RelativeLayout
        android:id="@+id/top_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#ffffff"
        android:elevation="0dp">

        <!-- 返回按钮 -->
<!--        <ImageButton-->
<!--            android:id="@+id/btn_back"-->
<!--            android:layout_width="50dp"-->
<!--            android:layout_height="50dp"-->
<!--            android:layout_marginStart="12dp"-->
<!--            android:scaleType="fitCenter"-->
<!--            android:background="?attr/selectableItemBackgroundBorderless"-->
<!--            android:contentDescription="返回"-->
<!--            android:src="@drawable/ic_back" />-->
        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:gravity="center"
            />

        <!-- 保存按钮 -->
        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:text="保存"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:gravity="center"
            />
    </RelativeLayout>

    <!-- 图片显示区域 - 支持缩放和平移 -->
    <FrameLayout
        android:id="@+id/image_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_toolbar"
        android:layout_below="@id/top_toolbar">

        <!-- 使用自定义ImageView实现缩放功能 -->
        <com.example.myapplication.widget.ZoomableImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="matrix" />
<!--        <ImageView-->
<!--            android:id="@+id/image_view"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:scaleType="fitCenter"-->
<!--            android:adjustViewBounds="true" />-->

    </FrameLayout>

    <!-- 底部功能按钮栏 -->
    <LinearLayout
        android:id="@+id/bottom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="vertical"
        android:elevation="8dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp">

        <!-- 功能按钮行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="6">

            <!-- 裁剪按钮 -->
            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageButton
                    android:id="@+id/btn_crop"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_crop"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="裁剪"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="裁剪"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 旋转按钮 -->
            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageButton
                    android:id="@+id/btn_rotate"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_rotate"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="旋转"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="旋转"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 翻转按钮 -->
            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageButton
                    android:id="@+id/btn_overturn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_overturn"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="翻转"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="翻转"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 调节按钮 -->
            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageButton
                    android:id="@+id/btn_adjust"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_adjust"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="调节"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="调节"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 文字按钮 -->
            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageButton
                    android:id="@+id/btn_text"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_text"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="文字编辑"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="文字"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 贴纸按钮 -->
            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageButton
                    android:id="@+id/btn_paster"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_paster"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="贴纸"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="贴纸"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>