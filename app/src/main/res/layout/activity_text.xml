<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-material3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- 图片显示区域 - 支持缩放和平移 -->
    <FrameLayout
        android:id="@+id/image_container"
        android:layout_width="match_parent"
        android:layout_height="530dp">

        <!-- 使用自定义ImageView实现缩放功能 -->
        <com.example.myapplication.widget.ZoomableImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="530dp"
            android:scaleType="matrix" />

    </FrameLayout>

    <!-- 底部功能按钮栏 -->
    <LinearLayout
        android:id="@+id/edit_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="vertical"
        android:elevation="8dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp">

        <!-- 文字样式调节区域 -->
        <LinearLayout
            android:id="@+id/text_style_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <!-- 字体调节 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="字体"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"/>
                <Button
                    android:id="@+id/btn_song_typeface"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="宋体" />
                <Button
                    android:id="@+id/btn_boldface"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="黑体" />
                <Button
                    android:id="@+id/btn_regular_script"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="楷体" />
            </LinearLayout>
            <!-- 字体大小调节 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="字号"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"/>
                <SeekBar
                    android:id="@+id/seekbar_text_size"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="24"
                    android:progress="18" />
                <TextView
                    android:id="@+id/text_size_value"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="30"
                    android:textSize="20sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- 颜色选择 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="颜色"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"/>

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scrollbars="none"
                    android:contentDescription="颜色选择器，可左右滑动查看更多颜色选项">

                    <LinearLayout
                        android:id="@+id/color_palette"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">
                        <!-- 颜色按钮将在Java代码中动态添加 -->
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>
        <!-- 功能按钮行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- 文本输入框 -->
            <EditText
                android:id="@+id/text_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginLeft="10dp"
                android:textSize="30sp"
                android:hint="请输入文字"
                android:textColorHint="#AAAAAA"
                android:textColor="#000000"
                android:padding="10dp"
                android:inputType="text"
                android:maxLines="3">
            </EditText>

            <!-- 取消按钮 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="0dp"
                android:clickable="true"
                android:focusable="true">

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="×"
                    android:textColor="#ffffff"
                    android:textSize="30sp" />

            </LinearLayout>

            <!-- 确认按钮 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true">

                <Button
                    android:id="@+id/btn_confirm"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="√"
                    android:textColor="#ffffff"
                    android:textSize="30sp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>